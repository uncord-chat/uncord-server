{
	"info": {
		"name": "Uncord Server",
		"description": "API collection for the Uncord self-hosted chat server.\n\nAfter registering or logging in, the access token is automatically saved to the collection variable `token` and used for all authenticated requests.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080/api/v1"
		},
		{
			"key": "token",
			"value": ""
		},
		{
			"key": "refresh_token",
			"value": ""
		},
		{
			"key": "channel_id",
			"value": ""
		},
		{
			"key": "category_id",
			"value": ""
		},
		{
			"key": "verify_token",
			"value": ""
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"auth": { "type": "noauth" },
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				}
			]
		},
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 201) {",
									"    const data = pm.response.json().data;",
									"    pm.collectionVariables.set('token', data.access_token);",
									"    pm.collectionVariables.set('refresh_token', data.refresh_token);",
									"}"
								]
							}
						}
					],
					"request": {
						"auth": { "type": "noauth" },
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"username\": \"myuser\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 200) {",
									"    const data = pm.response.json().data;",
									"    pm.collectionVariables.set('token', data.access_token);",
									"    pm.collectionVariables.set('refresh_token', data.refresh_token);",
									"}"
								]
							}
						}
					],
					"request": {
						"auth": { "type": "noauth" },
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 200) {",
									"    const data = pm.response.json().data;",
									"    pm.collectionVariables.set('token', data.access_token);",
									"    pm.collectionVariables.set('refresh_token', data.refresh_token);",
									"}"
								]
							}
						}
					],
					"request": {
						"auth": { "type": "noauth" },
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/refresh",
							"host": ["{{base_url}}"],
							"path": ["auth", "refresh"]
						}
					}
				},
				{
					"name": "Verify Email (API)",
					"request": {
						"auth": { "type": "noauth" },
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"verification-token-here\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/verify-email",
							"host": ["{{base_url}}"],
							"path": ["auth", "verify-email"]
						}
					}
				},
				{
					"name": "Verify Email (Browser)",
					"request": {
						"auth": { "type": "noauth" },
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:8080/verify-email?token={{verify_token}}",
							"protocol": "http",
							"host": ["localhost"],
							"port": "8080",
							"path": ["verify-email"],
							"query": [
								{
									"key": "token",
									"value": "{{verify_token}}"
								}
							]
						}
					}
				}
			]
		},
		{
			"name": "Users",
			"item": [
				{
					"name": "Get Me",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/users/@me",
							"host": ["{{base_url}}"],
							"path": ["users", "@me"]
						}
					}
				},
				{
					"name": "Update Me",
					"request": {
						"method": "PATCH",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"display_name\": \"New Display Name\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/@me",
							"host": ["{{base_url}}"],
							"path": ["users", "@me"]
						}
					}
				}
			]
		},
		{
			"name": "Server",
			"item": [
				{
					"name": "Get Server Config",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/server/",
							"host": ["{{base_url}}"],
							"path": ["server", ""]
						}
					}
				},
				{
					"name": "Update Server Config",
					"request": {
						"method": "PATCH",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"My Server\",\n  \"description\": \"A great chat server\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/server/",
							"host": ["{{base_url}}"],
							"path": ["server", ""]
						}
					}
				}
			]
		},
		{
			"name": "Channels",
			"item": [
				{
					"name": "List Channels",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/server/channels",
							"host": ["{{base_url}}"],
							"path": ["server", "channels"]
						}
					}
				},
				{
					"name": "Create Channel",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 201) {",
									"    const data = pm.response.json().data;",
									"    pm.collectionVariables.set('channel_id', data.id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"new-channel\",\n  \"type\": \"text\",\n  \"topic\": \"Channel topic here\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/server/channels",
							"host": ["{{base_url}}"],
							"path": ["server", "channels"]
						}
					}
				},
				{
					"name": "Get Channel",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/channels/{{channel_id}}",
							"host": ["{{base_url}}"],
							"path": ["channels", "{{channel_id}}"]
						}
					}
				},
				{
					"name": "Update Channel",
					"request": {
						"method": "PATCH",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"renamed-channel\",\n  \"topic\": \"Updated topic\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/channels/{{channel_id}}",
							"host": ["{{base_url}}"],
							"path": ["channels", "{{channel_id}}"]
						}
					}
				},
				{
					"name": "Delete Channel",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/channels/{{channel_id}}",
							"host": ["{{base_url}}"],
							"path": ["channels", "{{channel_id}}"]
						}
					}
				}
			]
		},
		{
			"name": "Categories",
			"item": [
				{
					"name": "List Categories",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/server/categories",
							"host": ["{{base_url}}"],
							"path": ["server", "categories"]
						}
					}
				},
				{
					"name": "Create Category",
					"event": [
						{
							"listen": "test",
							"script": {
								"type": "text/javascript",
								"exec": [
									"if (pm.response.code === 201) {",
									"    const data = pm.response.json().data;",
									"    pm.collectionVariables.set('category_id', data.id);",
									"}"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"New Category\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/server/categories",
							"host": ["{{base_url}}"],
							"path": ["server", "categories"]
						}
					}
				},
				{
					"name": "Update Category",
					"request": {
						"method": "PATCH",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"name\": \"Renamed Category\",\n  \"position\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/categories/{{category_id}}",
							"host": ["{{base_url}}"],
							"path": ["categories", "{{category_id}}"]
						}
					}
				},
				{
					"name": "Delete Category",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{base_url}}/categories/{{category_id}}",
							"host": ["{{base_url}}"],
							"path": ["categories", "{{category_id}}"]
						}
					}
				}
			]
		}
	]
}
